
//VERTEX SHADERS


//GLSL


vertex_program CR_simple_vertexGLSLES glsles
{
	source simple-vertex.glsles
	syntax glsles
	entry_point main
}


vertex_program CR_zeroVGLSLES glsles
{
	source simplezero-vertex.glsles
	syntax glsles
	entry_point main
}


//GLSL


vertex_program CR_simple_vertexGLSL glsl
{
    source simple-vertex.glsl
	syntax glsl120
    entry_point main
}


vertex_program CR_zeroVGLSL glsl
{
    source simplezero-vertex.glsl
	syntax glsl120
    entry_point main
}


//HLSL SHADER MODEL 4

vertex_program CR_simple_vertexHLSL4 hlsl
{
    source CR_simple-sm4.hlsl
    target vs_4_0
    entry_point simple_vertex
}


vertex_program CR_zeroVHLSL4 hlsl
{
    source CR_simple-sm4.hlsl
    target vs_4_0
    entry_point simple_zero_vertex
}


//HLSL SHADER MODEL 3

vertex_program CR_simple_vertexHLSL hlsl
{
    source CR_simple.hlsl
    target vs_3_0
    entry_point simple_vertex
}


vertex_program CR_zeroVHLSL hlsl
{
    source CR_simple.hlsl
    target vs_3_0
    entry_point simple_zero_vertex
}



