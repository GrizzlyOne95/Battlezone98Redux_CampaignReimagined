//UNIFIED


//VERTEX


vertex_program CR_simple_vertex unified
{
	delegate CR_simple_vertexGLSLES
	delegate CR_simple_vertexGLSL
	delegate CR_simple_vertexHLSL4
	delegate CR_simple_vertexHLSL
	
	default_params
    {
        param_named_auto wvpMat worldviewproj_matrix
		param_named_auto worldViewMat worldview_matrix
    }
}

vertex_program CR_zeroV unified
{
	delegate CR_zeroVGLSLES
	delegate CR_zeroVGLSL
	delegate CR_zeroVHLSL4
	delegate CR_zeroVHLSL
	
	default_params
    {
        param_named_auto wvpMat worldviewproj_matrix
    }
}



//FRAGMENT

fragment_program CR_simple_fragment unified
{
	delegate CR_simple_fragmentGLSLES
	delegate CR_simple_fragmentGLSL
	delegate CR_simple_fragmentHLSL4
	delegate CR_simple_fragmentHLSL
	
	default_params
    {
		param_named_auto sceneAmbient derived_ambient_light_colour
		param_named_auto materialShininess surface_shininess
		param_named_auto lightDiffuse derived_light_diffuse_colour_array 1
		param_named_auto lightSpecular derived_light_specular_colour_array 1
		param_named_auto lightAttenuation light_attenuation_array 1
		param_named_auto spotLightParams spotlight_params_array 1
		param_named_auto lightPosition light_position_view_space_array 1
		param_named_auto lightDirection light_direction_view_space_array 1
    }
	
}

fragment_program CR_zeroF unified
{
	delegate CR_zeroFGLSLES
	delegate CR_zeroFGLSL
	delegate CR_zeroFHLSL4
	delegate CR_zeroFHLSL	
}


