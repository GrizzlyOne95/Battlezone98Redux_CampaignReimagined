//GLOW SHADER PROGRAM
//(FRAGMENT SHADER ONLY. NO VERTEX SHADER)


//GLSLES
//FRAGMENT

fragment_program CR_GlowDownsample_fpGLSLES glsles
{
	source glow-downsample.glsles
	syntax glsles
	entry_point main

	default_params
	{
		param_named rt int 0
	}
}

fragment_program CR_GlowBlurH_fpGLSLES glsles
{
	source glow-blurH.glsles
	syntax glsles
	entry_point main

	default_params
	{
		param_named_auto invMapSize inverse_texture_size 0
		param_named scaleGlowOffset float 1.65
		param_named rt int 0
	}
}

fragment_program CR_GlowBlurV_fpGLSLES glsles
{
	source glow-blurV.glsles
	syntax glsles
	entry_point main

	default_params
	{
		param_named_auto invMapSize inverse_texture_size 0
		param_named scaleGlowOffset float 1.65
		param_named rt int 0
	}
}

fragment_program CR_Glow_fsGLSLES glsles
{
	source glow.glsles
	syntax glsles
	entry_point main

	default_params
	{
		param_named glowPower float 1.45
		param_named scene int 0
		param_named blurX int 1
	}
}






